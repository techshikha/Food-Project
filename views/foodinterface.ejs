<style>
  body {
    margin: 0;
  }

  .maincontainer {
    background: #c8d6e5;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: popins;

  }

  .box {
    width: 80%;
    height: auto;
    background: white;
    border-radius: 10px;
    padding: 15px;
  }

  .heading {
    display: flex;
    flex-direction: row;
    align-items: center;
  }

  .headingstyle {
    margin-left: 10px;
    font-size: 18px;
    font-weight: bold;
  }

  .btncenter {
    display: flex;
    justify-content: center;
  }

  .btnsize {
    margin-top: 5px;
    width: 80%;
  }
  .addpic {
    margin-top: 40px;
    width: 80px;
    height: 80px;
    border-radius: 20px;
  }
  
</style>

<html>

<head>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&display=swap"
    rel="stylesheet">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">

    </script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
    integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
    crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="/javascripts/project.js"></script>
</head>
<form action="/food/submit_food" method="post" enctype="multipart/form-data">

  <div class="maincontainer">
    <div class="box">


      <div class="row">
        <div class="col-12 heading">
          

          <div style="display: flex;align-items: center;">
            <img src="/images/haldilogo.png" width="80" />
            <div class="headingstyle">Food Register</div>
           </div>
           <div style="margin-left: auto;">
            <a href="/food/display_all_food"><img src="/images/food.png" class="addpic"></a> 
            </div>

        </div>


      </div>
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-lg-4" style=" margin-bottom: 5px;">
          <select class="form-select" name="categoryid" id="categoryid" class="form-select">
            <option>Select Category</option>
            
            
          </select>

        </div>

        <div class="col-xs-12 col-sm-12 col-lg-4" style="margin-bottom: 5px;">
          <select class="form-select" name="subcategoryid" id="subcategoryid" class="form-select">
            <option selected>Select Sub Category</option>
            <option value="100">One</option>
            <option value="200">Two</option>
            <option value="300">Three</option>
          </select>

        </div>
        <div class="col-xs-12 col-sm-12 col-lg-4" style="margin-bottom: 5px;">
          <!-- <label for="exampleFormControlInput1" class="form-label">Email address</label> -->
          <input type="text" class="form-control" name="foodname" id="foodname" placeholder="Food Name">
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12" style="margin-top: 5px;">
          <textarea class="form-control" name="indgredients" rows="3">Ingredients</textarea>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12" style="margin-top: 5px;">
          <textarea class="form-control" name="description" rows="3">Description</textarea>
        </div>
      </div>

      <div class="row" style="margin-top: 10px;">
        <div class="col-sm-12 col-lg-6 col-xs-12">
          <input type="text" class="form-control" name="price" rows="2" placeholder="Price">
        </div>
        <div class="col-sm-12 col-lg-6 col-xs-12">
          <input type="text" class="form-control" name="offerprice" rows="2" placeholder="Offer Price">
        </div>
      </div>
      <div class="row" style="margin-top: 10px;">
        <div class="col-lg-3 col-sm-12 col-xs-12" style="display: flex; justify-content: center; align-items:center;">
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="foodtype" id="foodtype" value="veg">
            <label class="form-check-label" for="foodtype">veg</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="foodtype" id="foodtype" value="Nonveg">
            <label class="form-check-label" for="foodtype">Nonveg</label>
          </div>


        </div>
        <div class="col-lg-3 col-sm-12 col-xs-12" style="margin-top: 5px;">
          <select name="status" id="status" class="form-select">
            <option selected>Select Status</option>
            <option>continue</option>
            <option>discontinue</option>

          </select>

        </div>
        <div class="col-lg-1 col-sm-12 col-xs-12">
          <img id="fp">
        </div>


        <div class="col-lg-5 col-sm-12 col-xs-12">
          <input onchange="showPicture()" class="form-control" type="file" name="foodpicture" id="foodpicture">
        </div>



      </div>
      <div class="row" style="margin-top: 10px;">
        <div class="col-lg-6 col-sm-12 col-xs-12 btncenter">
          <button type="submit" class="btn btn-primary btnsize">submit</button>

        </div>
        <div class="col-lg-6 col-sm-12 col-xs-12 btncenter">
          <button type="reset" class="btn btn-primary btnsize">reset</button>

        </div>

      </div>
      <div class="row" style="margin-top: 10px;">
        <div class="col-lg-12  col-sm-12  col -xs-12 btncenter">
          <%=message %>
        </div>

      </div>

    </div>
  </div>
</form>

</html>